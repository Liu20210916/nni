{
  "builders": [{
    "type": "azure-arm",

    "client_id": "<client_id>",

    "managed_image_name": "nni-linux-image",
    "managed_image_resource_group_name": "nni",

    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "0001-com-ubuntu-server-focal",
    "image_sku": "20_04-lts-gen2",

    "os_disk_size_gb": 50,

    "shared_image_gallery_destination": {
      "subscription": "<subscription_id>",
      "resource_group": "nni",
      "gallery_name": "nniImageGallery",
      "image_name": "nniLinuxImage",
      "image_version": "<image_version>",
      "replication_regions": ["southeastasia", "westus2"],
      "storage_account_type": "Standard_LRS"
    },

    "location": "West US 2",
    "build_resource_group_name": "nni",
    "vm_size": "Standard_ND6s"
  }],
  "provisioners": [{
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
    "inline": [
      "apt-get update",
      "apt-get upgrade -y",
      "apt-get -y install nginx",

      "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
  }]
}
