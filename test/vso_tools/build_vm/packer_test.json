{
  "builders": [{
    "type": "azure-arm",

    "client_id": "<client_id>",

    "managed_image_name": "<managed_image_name>",
    "managed_image_resource_group_name": "<resource_group>",

    "os_type": "Windows",
    "image_publisher": "MicrosoftWindowsServer",
    "image_offer": "WindowsServer",
    "image_sku": "2019-datacenter-gensecond",

    "build_resource_group_name": "nni",
    "vm_size": "Standard_D2s_v4",

    "allowed_inbound_ip_addresses": ["<ip_address>"],
    "user_data_file": "change_winrm_port.ps1",

    "communicator": "winrm",
    "winrm_use_ssl": true,
    "winrm_insecure": true,
    "winrm_timeout": "10m",
    "winrm_username": "packer",
    "winrm_port": 15986
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "inline": [
        "export VM=$(az vm list -g <resource_group> --query [].'name' --output tsv | grep pkrvm | head -1)",
        "echo \"VM Found: ${VM}\"",
        "az vm run-command invoke --command-id RunPowerShellScript --name ${VM} -g <resource_group> --scripts @change_winrm_port.ps1"
      ]
    },
    {
      "type": "powershell",
      "inline": [
        "tasklist /v",
        "tasklist /svc",
        "Get-ScheduledTask",
        "Start-Sleep -Seconds 300",
        "Get-ChildItem \"HKLM:\\Software\\Microsoft\\Windows\\CurrentVersion\\Component Based Servicing\\RebootPending\" -EA Ignore",
        "Get-Item \"HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\WindowsUpdate\\Auto Update\\RebootRequired\" -EA Ignore",
        "Get-ItemProperty \"HKLM:\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\" -Name PendingFileRenameOperations -EA Ignore",
        "tasklist /v",
        "tasklist /svc",
        "Get-ScheduledTask"
      ]
    },
    {
      "type": "powershell",
      "inline": [
        "Write-Host Hello!"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "15m",
      "restart_check_command": "powershell -command \"& {Write-Output 'restarted.'}\""
    }
  ]
}
